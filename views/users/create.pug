extends ../layouts/commom

block content
	h2 Create new user

	if erorrs
		each erorr in erorrs
			.alert.alert-danger= erorr

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", class="ml-2", value=values ? values.name : '')
			br
			label(for="age") Age
			input#age.form-control(name="age", type="text", class="ml-2", value=values ? values.age : '')
			br
			label(for="avatar") Avatar
			input#age.form-control-file(name="avatar", type="file")
			br
			button(class="btn btn-primary") Create

