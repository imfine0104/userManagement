extends ../layouts/commom

block content
	h2 Products
	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control", value=value ? value : '')
			button(class="ml-2 btn btn-primary") Search
	.row
		each product in products 	
			.col-md-3
				.card.mb-3.shadow-sm
					img.img-thumbnail(src=product.image, alt='...')
					.card-body
						h6=product.name
						p.card-text=product.discription
						.d-flex.justify-content-between.align-items-center
							a.btn.btn-sm.btn-primary(href='/cart/add/' + product.id type='button') Add to cart