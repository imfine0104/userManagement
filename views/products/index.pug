extends ../layouts/commom

block content
	h2 Products
	.row
		each product in products
			.col-md-3
				.card.mb-3.shadow-sm
					img.img-thumbnail(src=product.image, alt='...')
					.card-body
						h6=product.name
						p.card-text=product.discription
						.d-flex.justify-content-between.align-items-center
						.btn-group
							button.btn.btn-sm.btn-primary(type='button') Add to cart